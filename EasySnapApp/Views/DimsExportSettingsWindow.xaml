<Window x:Class="EasySnapApp.Views.DimsExportSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DIMS Export Settings" Height="500" Width="700"
        Background="#1E1E22" Foreground="#F0F0F0"
        FontFamily="Segoe UI" FontSize="13"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="DIMS Export Settings"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#FAFAFA" Margin="0,0,0,10"/>
        
        <!-- Enable checkbox -->
        <CheckBox Grid.Row="1" x:Name="chkEnableDimsOverride" 
                  Content="Enable DIMS export settings override"
                  IsChecked="True" 
                  Foreground="#F0F0F0"
                  Margin="0,0,0,20"/>
        
        <!-- Settings Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="These values are used for DIMS export CSV files." 
                           Foreground="#B0B0B0" Margin="0,0,0,16"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Site ID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Site ID:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtSiteId" Text="733" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- Factor -->
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Factor:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="0" Grid.Column="4" x:Name="txtFactor" Text="166" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- Dimension Unit -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Dimension Unit:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDimUnit" Text="in" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- Weight Unit -->
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Weight Unit:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="1" Grid.Column="4" x:Name="txtWgtUnit" Text="lb" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- Volume Unit -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Volume Unit:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtVolUnit" Text="in" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- OPT_INFO_2 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="OPT_INFO_2:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtOptInfo2" Text="Y" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- OPT_INFO_3 -->
                    <TextBlock Grid.Row="3" Grid.Column="3" Text="OPT_INFO_3:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="3" Grid.Column="4" x:Name="txtOptInfo3" Text="Y" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- OPT_INFO_8 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="OPT_INFO_8:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtOptInfo8" Text="0" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                    
                    <!-- UPDATED -->
                    <TextBlock Grid.Row="4" Grid.Column="3" Text="UPDATED:" VerticalAlignment="Center" 
                               Foreground="#F0F0F0" Margin="0,8"/>
                    <TextBox Grid.Row="4" Grid.Column="4" x:Name="txtUpdated" Text="N" 
                             Background="#2A2A2E" Foreground="#F0F0F0" BorderBrush="#555" 
                             Margin="0,8"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Defaults" x:Name="btnResetDims" 
                    Background="#4A4A4E" Foreground="#F0F0F0" BorderThickness="0" 
                    Padding="12,6" Margin="0,0,10,0" Click="ResetDimsDefaults_Click"/>
            <Button Content="Save Settings" x:Name="btnSaveDims" 
                    Background="#007ACC" Foreground="#FFFFFF" BorderThickness="0" 
                    Padding="12,6" Margin="0,0,10,0" Click="SaveDimsSettings_Click"/>
            <Button Content="Cancel" x:Name="btnCancel" 
                    Background="#666" Foreground="#FFFFFF" BorderThickness="0" 
                    Padding="12,6" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
