<Window x:Class="EasySnapApp.Views.MeasurementToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Measurement Tools"
        Height="650"
        Width="950"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E22"
        Foreground="#F0F0F0"
        FontFamily="Segoe UI">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,18,0">
            <Button x:Name="BtnGeneral" Content="General Settings" Click="BtnGeneral_Click" Margin="0,0,0,10" />
            <Button x:Name="BtnInfrared" Content="3D Infrared Cam" Click="BtnInfrared_Click" Margin="0,0,0,10" />
            <Button x:Name="BtnMultiCam" Content="Multi-Cam" Click="BtnMultiCam_Click" Margin="0,0,0,10" />
            <Button x:Name="BtnLaser" Content="Laser Array" Click="BtnLaser_Click" Margin="0,0,0,10" />
        </StackPanel>
        <Border Grid.Column="1" Background="#23272D" CornerRadius="8">
            <ContentControl x:Name="RightContent" Margin="14"/>
        </Border>
    </Grid>
</Window>
