<UserControl x:Class="EasySnapApp.Views.Settings.Measurement.MeasurementGeneralSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#23272D" Foreground="#F0F0F0">
    <StackPanel Margin="10">
        <TextBlock Text="Measurement Unit Settings" FontWeight="Bold" FontSize="16"/>
        <TextBlock TextWrapping="Wrap"
            Margin="0,10,0,0"
            Text="Length, volume, mass, time, temperature settings will go here. Allow user to choose metric/imperial, set defaults, and decide how raw data is converted for display/export. This area can be expanded with checkboxes or tabs as needed."/>
    </StackPanel>
</UserControl>
