<Window x:Class="EasySnapApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySnap"
        Height="900"
        Width="1400"
        Background="#1E1E22"
        Foreground="#F0F0F0"
        FontFamily="Segoe UI"
        FontSize="13"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="HeaderBrush" Color="#FF888888"/>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top"
              Background="#222"
              Foreground="#FAFAFA">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit"/>
            <MenuItem Header="_Settings">
                <MenuItem Header="General Settings..." Click="OpenSettings_Click"/>
                <Separator/>
                <MenuItem Header="Stage Setup..." Click="StageSetup_Click"/>
                <MenuItem Header="Calibrate 3D Camera..." Click="Calibrate3DCamera_Click"/>
                <Separator/>
                <MenuItem Header="Test New Window..." Click="OpenTestWindow_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About..."
                          Click="About_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Background="#252526" Foreground="#F0F0F0">
            <TextBlock x:Name="StatusTextBlock" Text="Ready." />
        </StatusBar>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top"
                 Background="#222"
                 Foreground="#FAFAFA"
                 Padding="4">
            <Label Content="Part Number:"
                   Foreground="#F0F0F0"
                   FontWeight="Bold"/>
            <TextBox x:Name="PartNumberTextBox"
                     Width="200"
                     Margin="4,0,16,0"/>
            <Button x:Name="NewButton"
                    Content="New"
                    Click="NewButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="CaptureButton"
                    Content="Capture"
                    Click="CaptureButton_Click"/>
        </ToolBar>

        <!-- Thumbnail Bar -->
        <Border DockPanel.Dock="Bottom"
                Height="100"
                Background="#18181A"
                BorderBrush="#353535"
                BorderThickness="1,1,1,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Padding="8,4">
                <ItemsControl x:Name="ThumbnailBar"
                              ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ThumbnailImage}"
                                   Width="100"
                                   Height="100"
                                   Margin="4"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="Thumbnail_MouseLeftButtonUp"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Main Content -->
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- Photo Preview -->
            <Border Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,4"
                    BorderBrush="#444"
                    BorderThickness="1"
                    Background="#2A2A2E">
                <Image x:Name="PreviewImage"
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Border>

            <!-- Live Depth Preview -->
            <Border Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,4,8,0"
                    BorderBrush="#444"
                    BorderThickness="1"
                    Background="#2A2A2E">
                <Image x:Name="DepthImage"
                       Stretch="Fill"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Border>

            <!-- Results Table -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    BorderBrush="#404040"
                    BorderThickness="1"
                    Background="#23272D"
                    Padding="4">
                <DataGrid x:Name="SessionDataGrid"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          GridLinesVisibility="None"
                          SelectionChanged="SessionDataGrid_SelectionChanged"
                          Background="#23272D"
                          Foreground="#FAFAFA"
                          RowBackground="#23272D"
                          AlternatingRowBackground="#252526"
                          ColumnHeaderHeight="30"
                          RowHeight="28"
                          FontSize="13"
                          ItemsSource="{Binding}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Part Number"
                                            Binding="{Binding PartNumber}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Seq"
                                            Binding="{Binding Sequence}"
                                            Width="60"/>
                        <DataGridTextColumn Header="File"
                                            Binding="{Binding ImageFileName}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Timestamp"
                                            Binding="{Binding TimeStamp}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Length (in)"
                                            Binding="{Binding LengthIn, StringFormat={}{0:F2}}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Depth (in)"
                                            Binding="{Binding DepthIn, StringFormat={}{0:F2}}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Height (in)"
                                            Binding="{Binding HeightIn, StringFormat={}{0:F2}}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Weight (lb)"
                                            Binding="{Binding WeightLb, StringFormat={}{0:F2}}"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
