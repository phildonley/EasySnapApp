<Window x:Class="EasySnapApp.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        Width="1600"
        Height="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- Background splash image -->
        <Image Source="{Binding SplashImage}"
           Stretch="Fill"
           SnapsToDevicePixels="True"/>

        <!-- Overlay areas (no visible boxes, pixel-perfect placement) -->
        <Canvas>

            <!-- Loading / status text area -->
            <!-- 540 x 90 at X=54, Y=340 -->
            <TextBlock Canvas.Left="54"
                   Canvas.Top="340"
                   Width="540"
                   Height="90"
                   Text="{Binding StatusText}"
                   FontFamily="Segoe UI"
                   FontSize="28"
                   FontWeight="SemiBold"
                   TextWrapping="Wrap"
                   Foreground="#0C5A98"
                   VerticalAlignment="Center" />

            <!-- Footer / copyright / version area -->
            <!-- 540 x 400 at X=54, Y=560 -->
            <TextBlock Canvas.Left="54"
                   Canvas.Top="560"
                   Width="540"
                   Height="400"
                   Text="{Binding FooterText}"
                   FontFamily="Segoe UI"
                   FontSize="18"
                   FontWeight="Normal"
                   TextWrapping="Wrap"
                   Foreground="#0C5A98" />

        </Canvas>
    </Grid>
</Window>
